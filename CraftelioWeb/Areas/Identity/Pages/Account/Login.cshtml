@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <section class="card p-4 shadow-sm">
                <form id="account" method="post">
                    @* <h2 class="text-center mb-4">Use a local account to log in.</h2> *@
               

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row g-3">
                        <!-- Email Input -->
                        <div class="col-md-12 form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="col-md-12 form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="col-md-12">
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-md-12">
                            <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
                        </div>
                    </div>

                    <!-- Additional Links -->
                    <div class="text-center mt-4">
                        <p><a id="forgot-password" class="link-theme" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a class="link-theme" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        @* <p><a id="resend-confirmation" class="link-theme" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p> *@
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container {
        max-width: 900px;
    }

    /* Primary theme colors */
    .btn-primary {
        background-color: #6C37FF; /* Adjust to your theme */
        border-color: #6C37FF;
    }

        .btn-primary:hover {
            background-color: #5127CC; /* Darker theme color for hover */
            border-color: #5127CC;
        }

    /* Link styling to match theme */
    .link-theme {
        color: #6C37FF;
        text-decoration: none;
    }

        .link-theme:hover {
            color: #5127CC;
            text-decoration: underline;
        }

    /* Center align the card and set width */
    .card {
        border-radius: 12px;
        border: none;
    }

    .form-check-label {
        font-size: 1rem;
    }

    .form-control {
        border-radius: 0.5rem;
    }
</style>
