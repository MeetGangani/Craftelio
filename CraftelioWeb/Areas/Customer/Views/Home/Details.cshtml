@model ShoppingCart
@using System.Globalization

<style>
    .product-image {
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .product-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 2rem;
    }

    .price-section {
        background-color: #e9ecef;
        border-radius: 8px;
        padding: 1rem;
    }

    .badge-custom {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<div class="container my-5">
    <form method="post">
        <input type="hidden" asp-for="ProductId" />
        <div class="row g-4">
            <div class="col-lg-5">
                <img src="@Model.Product.ImageUrl" class="img-fluid product-image w-100" alt="@Model.Product.Title" />
            </div>
            <div class="col-lg-7">
                <div class="product-details">
                    <h1 class="mb-3">@Model.Product.Title</h1>
                    <p class="text-muted mb-4">by <strong>@Model.Product.Author</strong></p>

                    <div class="d-flex gap-2 mb-4">
                        <span class="badge bg-info badge-custom">@Model.Product.CoverType.Name</span>
                        <span class="badge bg-warning badge-custom">@Model.Product.Category.Name</span>
                    </div>

                    <p class="mb-4">@Html.Raw(Model.Product.Description)</p>

                    <div class="price-section mb-4">
@*                         <p class="mb-2"><small>ISBN: @Model.Product.ISBN</small></p>
 *@                        <p class="mb-2"><small>List Price: <strike>@Model.Product.ListPrice.ToString("C", new CultureInfo("en-IN"))</strike></small></p>
                        <h3 class="text-primary mb-0">@Model.Product.Price.ToString("C", new CultureInfo("en-IN"))</h3>
                    </div>

                    <div class="mb-4">
                        <label for="Count" class="form-label">Quantity</label>
                        <input asp-for="Count" class="form-control" type="number" min="1" value="1" style="max-width: 100px;" />
                    </div>

                    <div class="d-flex gap-3">
                        <a class="btn btn-outline-secondary" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>